@model IEnumerable<Livraria.Application.DTOs.LivroDTO>

@{
    ViewData["Title"] = "Consultar Livro";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<form asp-action="Details" method="get">
    <div class="form-group">
        <label for="livroId">Selecione um Livro:</label>
        <select id="livroId" name="id" class="form-control" required>
            <option value="">-- Selecione um Livro --</option>
            @foreach (var livro in Model)
            {
                <option value="@livro.Id">@livro.Titulo</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Consultar</button>
</form>


