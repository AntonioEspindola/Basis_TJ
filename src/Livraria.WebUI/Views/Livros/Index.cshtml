@model IEnumerable<Livraria.Application.DTOs.LivroDTO>

@{
    ViewData["Title"] = "Menu dos Livros";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title=" Cadastrar livro" class="fas fa-plus"></span> Cadastrar livro
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Edicao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Editora)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AnoPublicacao)
                    </th>
                    <th>
                        Código
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edicao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Editora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnoPublicacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Alterar" class="btn btn-warning">
                            <span class="fas fa-edit">Alterar</span>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" title="Detalhes" class="btn btn-primary">
                            <span class="fas fa-search">Consultar</span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" title="Excluir" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Excluir</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>