@using System.Text.Json
@using Livraria.WebUI.ViewModels
@model LivroEditViewModel

<h3>Editar um Livro</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
             <input type="hidden" name="livroAutores" value='@Html.Raw(JsonSerializer.Serialize(Model.LivroAutores, new JsonSerializerOptions { WriteIndented = false }))' />
            <input type="hidden" name="livroAssuntos" value='@Html.Raw(JsonSerializer.Serialize(Model.LivroAssuntos, new JsonSerializerOptions { WriteIndented = false }))' />
            <input type="hidden" name="livroPrecoCanalVenda" value='@Html.Raw(JsonSerializer.Serialize(Model.LivroPrecoCanalVenda, new JsonSerializerOptions { WriteIndented = false }))' />

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <input asp-for="Editora" class="form-control" />
                <span asp-validation-for="Editora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edicao" class="control-label"></label>
                <input asp-for="Edicao" class="form-control" />
                <span asp-validation-for="Edicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoPublicacao" class="control-label"></label>
                <input asp-for="AnoPublicacao" class="form-control" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                  <a asp-action="Index" class="btn btn-info">Menu livros</a>
            </div>
        </form>
    </div>
</div>
<div>
  
</div>

